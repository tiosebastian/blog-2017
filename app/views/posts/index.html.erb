<h1 id="page-title">Stuff I've Written</h1>

	<div id="posts-wrapper" class="skinny-wrapper">
		<% @posts.each do |post| %>
			<div class="post">
				<p class="date"><%= post.created_at.strftime('%B %d, %Y') %></p>
				<h2><a href="#"><%= link_to post.title, post %></a></h2>
				<hr>
			</div>
		<% end %>
	</div>

	<div class="pagination">
		<span class="previous-page disabled">Previous</span>
		<em class="current-page">1</em>
		<a rel="next" href="#">2</a>
		<a class="next-page" href="#">Next</a>
	</div>