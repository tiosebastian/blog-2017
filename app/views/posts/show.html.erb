<div id="post-show-content" class="skinny-wrapper wrapper-padding">
	<header>
		<p class="date"><%= @post.created_at.strftime('%B %d, %Y') %></p>
		<h1><%= @post.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @post.content %>
	</div>

	<hr>

	<div id="share-box">
		<p>Share "<%= @post.title %>"</p>
		<!-- Twitter -->
		<%= render_shareable :buttons=> ['twitter', 'facebook', 'google_plus'] ,:title=> @post.title + " - " %>
	</div>

	<hr>

	<%= render 'disqus' %>

</div>

<%= link_to "Edit", edit_post_path(@post) %>
